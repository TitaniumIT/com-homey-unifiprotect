{
  "id": "ufv_take_snapshot",
  "title": {
    "en": "Take a snapshot",
    "nl": "Maak een momentopname"
  },
  "titleFormatted": {
    "en": "Take a snapshot from [[device]] with an width from [[width]]"
  },
  "args": [
    {
      "title": {
        "en": "Camera"
      },
      "name": "device",
      "type": "device",
      "filter": {
        "driver_id": "protectcamera"
      }
    },
    {
      "title": {
        "en": "Width in pixels",
        "nl": "Breedte in pixels"
      },
      "name": "width",
      "type": "number",
      "min": 0,
      "max": 1920,
      "placeholder": {
        "en": "Width in pixels",
        "nl": "Breedte in pixels"
      }
    }
  ]
}
