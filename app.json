{
    "$schema": "https://raw.githubusercontent.com/tmsns/homey-json-schema/master/schema.json",
    "id": "com.ubnt.unifivideo",
    "sdk": 2,
    "name": {
        "en": "UniFi Video"
    },
    "description": {
        "en": "Control Ubiquiti UniFi Video devices with Homey.",
        "nl": "Bedien Ubiquiti UniFi Video apparaten met Homey."
    },
    "tags": {
        "en": [
            "ubiquiti",
            "unifi",
            "security",
            "camera",
            "snapshot",
            "recording"
        ],
        "nl": [
            "ubiquiti",
            "unifi",
            "beveiligingscamera",
            "camera",
            "opname"
        ]
    },
    "images": {
        "large": "assets/images/large.png",
        "small": "assets/images/small.png"
    },
    "category": "security",
    "version": "0.9.0",
    "compatibility": ">=1.5.0",
    "author": {
        "name": "Jeroen Brosens",
        "email": "j.brosens+athom@gmail.com"
    },
    "contributing": {
        "donate": {
            "paypal": {
                "username": "jeroenbrosens"
            }
        }
    },
    "bugs": {
        "url": "https://github.com/j0bro/com.ubnt.unifivideo/issues"
    },
    "capabilities": {
        "nvr_version": {
            "type": "string",
            "title": {
                "en": "Version",
                "nl": "Versie"
            },
            "getable": true,
            "setable": false
        }
    },
    "drivers": [
        {
            "id": "uvc_nvr",
            "class": "other",
            "capabilities": [],
            "name": {
                "en": "UVC-NVR"
            },
            "images": {
                "large": "drivers/uvc_nvr/assets/images/large.png",
                "small": "drivers/uvc_nvr/assets/images/small.png"
            },
            "pair": [
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_devices"
                    }
                },
                {
                    "id": "add_devices",
                    "template": "add_devices"
                }
            ]
        },
        {
            "id": "uvc_g3",
            "class": "other",
            "capabilities": [],
            "name": {
                "en": "UVC-G3"
            },
            "images": {
                "large": "drivers/uvc_g3/assets/images/large.png",
                "small": "drivers/uvc_g3/assets/images/small.png"
            },
            "pair": [
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_devices"
                    }
                },
                {
                    "id": "add_devices",
                    "template": "add_devices"
                }
            ]
        }
    ],
    "flow": {
        "triggers": [
            {
                "id": "snapshot_created",
                "title": {
                    "en": "A snapshot was created",
                    "nl": "Er is een snapshot gemaakt"
                },
                "tokens": [
                    {
                        "name": "snapshot_token",
                        "title": {
                            "en": "Snapshot",
                            "nl": "Momentopname"
                        },
                        "type": "image"
                    },
                    {
                        "name": "snapshot_camera",
                        "title": {
                            "en": "Camera"                            
                        },
                        "type": "string"
                    }
                ]
            }
        ],
        "actions": [
            {
                "id": "take_snapshot_nvr",
                "title": {
                    "en": "Take a snapshot",
                    "nl": "Maak een momentopname"
                },
                "args": [
                    {
                        "name": "camera",
                        "type": "autocomplete",
                        "placeholder": {
                            "en": "Which camera",
                            "nl": "Welke camera"
                        },
                        "filter": "driver_id=uvc_nvr"
                    },
                    {
                        "name": "width",
                        "type": "number",
                        "min": 0,
                        "max": 1920,
                        "placeholder": {
                            "en": "Width in pixels",
                            "nl": "Breedte in pixels"
                        }
                    }
                ]
            },
            {
                "id": "take_snapshot_camera",
                "title": {
                    "en": "Take a snapshot",
                    "nl": "Maak een momentopname"
                },
                "args": [
                    {
                        "name": "camera",
                        "type": "device",
                        "placeholder": {
                            "en": "Which camera",
                            "nl": "Welke camera"
                        },
                        "filter": "driver_id=uvc_g3"
                    },
                    {
                        "name": "width",
                        "type": "number",
                        "min": 0,
                        "max": 1920,
                        "placeholder": {
                            "en": "Width in pixels",
                            "nl": "Breedte in pixels"
                        }
                    }
                ]
            }
        ]
    }
}